<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<!-- Transport beans -->
	<bean id="jmsConnectionFactory-egse" class="org.apache.activemq.ActiveMQConnectionFactory">
		<!-- <property name="brokerURL" value="${activemq.broker.url}" /> -->
		<property name="brokerURL" value="tcp://10.19.138.106:61616" />
	</bean>
	<bean id="pooledConnectionFactory-egse" class="org.apache.activemq.pool.PooledConnectionFactory">
		<property name="maxConnections" value="8" />
		<property name="maximumActive" value="500" />
		<property name="connectionFactory" ref="jmsConnectionFactory-egse" />
	</bean>
	<bean id="jmsConfig-egse" class="org.apache.camel.component.jms.JmsConfiguration">
		<property name="connectionFactory" ref="pooledConnectionFactory-egse" />
		<property name="transacted" value="false" />
		<property name="concurrentConsumers" value="10" />
	</bean>
	<bean id="activemq-egse" class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="configuration" ref="jmsConfig-egse" />
	</bean>
	
	
</beans>